<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>UtilisateurServlet</servlet-name>
        <servlet-class>geschool.metier.controller.UtilisateurServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionServlet</servlet-name>
        <servlet-class>geschool.metier.controller.SessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfServlet</servlet-name>
        <servlet-class>geschool.metier.controller.ProfServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClasseServlet</servlet-name>
        <servlet-class>geschool.metier.controller.ClasseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MatiereServlet</servlet-name>
        <servlet-class>geschool.metier.controller.MatiereServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutoServlet</servlet-name>
        <servlet-class>geschool.metier.controller.AutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InscriptionServlet</servlet-name>
        <servlet-class>geschool.metier.controller.InscriptionServlet</servlet-class>
   </servlet>
   <servlet>
        <servlet-name>FactureServlet</servlet-name>
        <servlet-class>geschool.metier.controller.FactureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UtilisateurServlet</servlet-name>
        <url-pattern>/UtilisateurServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionServlet</servlet-name>
        <url-pattern>/SessionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfServlet</servlet-name>
        <url-pattern>/ProfServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClasseServlet</servlet-name>
        <url-pattern>/ClasseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MatiereServlet</servlet-name>
        <url-pattern>/MatiereServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutoServlet</servlet-name>
        <url-pattern>/AutoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InscriptionServlet</servlet-name>
        <url-pattern>/InscriptionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FactureServlet</servlet-name>
        <url-pattern>/FactureServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            2
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>messages</param-value>
    </context-param>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>
</web-app>
